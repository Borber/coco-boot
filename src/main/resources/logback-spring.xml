<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <!-- 获取ip地址 -->
    <define name="ip" class="com.coco.boot.config.core.CustomizedApplicationIP"/>

    <conversionRule conversionWord="remoteIp" converterClass="com.coco.boot.config.core.CustomizedRemoteIp" />
    <!-- 从Spring中获取应用名称 -->
    <springProperty scope="context" name="applicationName" source="spring.application.name"/>
    <!-- 从Spring中获取应用端口号 -->
    <springProperty scope="context" name="port" source="server.port"/>
    <!-- 日志存放路径 -->
    <springProperty scope="context" name="log.path" source="log.path"/>
    <!-- 日志最大的历史 -->
    <springProperty scope="context" name="maxHistory" source="log.max-history"/>
    <!-- 日志输出格式 -->
    <property name="log.pattern"
              value="[${applicationName}, ${ip}:${port}, %remoteIp] %-5p %d{yyyy-MM-dd HH:mm:ss.SSS} [%t, %X{traceId:-}, %X{spanId:-}, %X{parentId:-}] %c.%M:%L - %m%n"/>

    <!-- 控制台输出 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>
    <!-- 系统日志输出 -->
    <appender name="file_info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/info.log</file>
        <!-- 循环政策：基于时间创建日志文件 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件名格式 -->
            <fileNamePattern>${log.path}/%d{yyyy-MM-dd}/info.log.gz</fileNamePattern>
            <!-- 日志最大的历史 60天 -->
            <maxHistory>${maxHistory}</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <appender name="file_error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/error.log</file>
        <!-- 循环政策：基于时间创建日志文件 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件名格式 -->
            <fileNamePattern>${log.path}/%d{yyyy-MM-dd}/error.log.gz</fileNamePattern>
            <!-- 日志最大的历史 60天 -->
            <maxHistory>${maxHistory}</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <!-- 过滤的级别 -->
            <level>ERROR</level>
            <!-- 匹配时的操作：接收（记录） -->
            <onMatch>ACCEPT</onMatch>
            <!-- 不匹配时的操作：拒绝（不记录） -->
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>
    <appender name="file_redis" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/redis.log</file>
        <!-- 循环政策：基于时间创建日志文件 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件名格式 -->
            <fileNamePattern>${log.path}/%d{yyyy-MM-dd}/redis.log.gz</fileNamePattern>
            <!-- 日志最大的历史 60天 -->
            <maxHistory>${maxHistory}</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>
    <logger name="redis" level="INFO" additivity="false">
        <appender-ref ref="file_redis"/>
    </logger>
    <!-- 系统模块日志级别控制  -->
    <logger name="com.coco.boot" level="info"/>
    <!-- Spring日志级别控制  -->
    <logger name="org.springframework" level="warn"/>
    <root level="info">
        <appender-ref ref="console"/>
    </root>

    <!--系统操作日志-->
    <root level="info">
        <appender-ref ref="file_info"/>
        <appender-ref ref="file_error"/>
    </root>
</configuration>
